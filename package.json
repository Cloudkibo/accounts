{
  "name": "accounts",
  "version": "1.0.0",
  "description": "CloudKibo Authentication Server",
  "main": "server/app.js",
  "scripts": {
    "test": "cross-env DEBUG=accounts:* NODE_ENV=testing jest  --coverage",
    "test:watch": "cross-env DEBUG=accounts:* NODE_ENV=testing jest --watch",
    "start:prod": "cross-env DEBUG=accounts:* forever start server/app.js",
    "stop:prod": "forever stopall",
    "debug": "cross-env DEBUG=express:router:route,express:application,kibopush:* NODE_ENV=development nodemon --trace-warnings server/app.js",
    "lint": "echo 'Pre-commit checks...' && standard --fix && echo \"No code style errors found.\"",
    "start": "cross-env DEBUG=accounts:* NODE_ENV=development DOMAIN=http://localhost:3024 nodemon --trace-warnings server/app.js",
    "start:staging": "cross-env DEBUG=accounts:* forever start server/app.js",
    "start:faizan": "cross-env DEBUG=kibopush:* NODE_ENV=development DOMAIN=https://kibopush-faizan.ngrok.io nodemon server/app.js",
    "stop:staging": "forever stopall"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cloudkibo/accounts"
  },
  "keywords": [
    "CloudKibo",
    "Authentication",
    "Server",
    "accounts"
  ],
  "author": "CloudKibo Engineering Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Cloudkibo/accounts/issues"
  },
  "homepage": "https://github.com/Cloudkibo/accounts#readme",
  "dependencies": {
    "@sentry/node": "^5.28.0",
    "async": "^2.6.1",
    "babel-eslint": "^9.0.0",
    "composable-middleware": "^0.3.0",
    "compression": "^1.7.3",
    "connect-multiparty": "^2.2.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "debug": "^2.6.8",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "ejs-lint": "^0.3.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jsonschema": "^1.1.6",
    "express-jwt": "^5.3.1",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "mailchimp-api-v3": "^1.12.0",
    "method-override": "^3.0.0",
    "moment": "^2.22.2",
    "mongodb": "^3.1.1",
    "mongoose": "^5.2.1",
    "morgan": "^1.9.0",
    "needle": "^2.2.4",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pidusage": "^2.0.17",
    "qrcode": "^1.4.4",
    "raven": "^2.6.4",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "sendgrid": "^1.0.1",
    "speakeasy": "^2.0.0",
    "stripe": "^6.1.1",
    "stripe-webhook-middleware": "^0.2.0",
    "winston": "^2.3.1",
    "winston-papertrail": "^1.0.5",
    "youtube-dl": "^3.0.2"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "jest": "^24.9.0",
    "nodemon": "^1.18.3",
    "standard": "^11.0.1",
    "supertest": "^4.0.2"
  },
  "standard": {
    "ignore": [
      "unused/*"
    ],
    "parser": "babel-eslint"
  },
  "nodemonConfig": {
    "ignore": [
      "unused/*",
      "documentation/*"
    ],
    "delay": "1000"
  }
}
